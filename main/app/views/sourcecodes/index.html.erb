<%- model_class = Sourcecode -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:body) %></th>
      <th><%= model_class.human_attribute_name(:problem) %></th>
      <th><%= model_class.human_attribute_name(:sampleinput) %></th>
      <th><%= model_class.human_attribute_name(:sampleoutput) %></th>
      <th><%= model_class.human_attribute_name(:input) %></th>
      <th><%= model_class.human_attribute_name(:output) %></th>
      <th><%= model_class.human_attribute_name(:inputa) %></th>
      <th><%= model_class.human_attribute_name(:outputa) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sourcecodes.each do |sourcecode| %>
      <tr>
        <td><%= link_to sourcecode.id, sourcecode_path(sourcecode) %></td>
        <td><%= sourcecode.body %></td>
        <td><%= sourcecode.problem %></td>
        <td><%= sourcecode.sampleinput %></td>
        <td><%= sourcecode.sampleoutput %></td>
        <td><%= sourcecode.input %></td>
        <td><%= sourcecode.output %></td>
        <td><%= sourcecode.inputa %></td>
        <td><%= sourcecode.outputa %></td>
        <td><%=l sourcecode.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sourcecode_path(sourcecode), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sourcecode_path(sourcecode),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sourcecode_path,
            :class => 'btn btn-primary' %>

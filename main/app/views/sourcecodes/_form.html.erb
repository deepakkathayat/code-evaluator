<%= form_for @sourcecode, :html => { :class => "form-horizontal sourcecode" } do |f| %>

    <% if @sourcecode.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sourcecode.errors.count, "error") %> prohibited this sourcecode from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sourcecode.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :body, :class => 'form-control' %>
    </div>
    <%= error_span(@sourcecode[:body]) %>
  </div>
  <div class="control-group">
    <%= f.label :problem, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :problem, :class => 'form-control' %>
    </div>
    <%= error_span(@sourcecode[:problem]) %>
  </div>
  <div class="control-group">
    <%= f.label :sampleinput, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sampleinput, :class => 'form-control' %>
    </div>
    <%= error_span(@sourcecode[:sampleinput]) %>
  </div>
  <div class="control-group">
    <%= f.label :sampleoutput, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sampleoutput, :class => 'form-control' %>
    </div>
    <%= error_span(@sourcecode[:sampleoutput]) %>
  </div>
  <div class="control-group">
    <%= f.label :input, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :input, :class => 'form-control' %>
    </div>
    <%= error_span(@sourcecode[:input]) %>
  </div>
  <div class="control-group">
    <%= f.label :output, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :output, :class => 'form-control' %>
    </div>
    <%= error_span(@sourcecode[:output]) %>
  </div>
  <div class="control-group">
    <%= f.label :inputa, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :inputa, :class => 'form-control' %>
    </div>
    <%= error_span(@sourcecode[:inputa]) %>
  </div>
  <div class="control-group">
    <%= f.label :outputa, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :outputa, :class => 'form-control' %>
    </div>
    <%= error_span(@sourcecode[:outputa]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            sourcecodes_path, :class => 'btn btn-default' %>

<% end %>

<%- model_class = Sourcecode -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd><%= @sourcecode.body %></dd>
  <dt><strong><%= model_class.human_attribute_name(:problem) %>:</strong></dt>
  <dd><%= @sourcecode.problem %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sampleinput) %>:</strong></dt>
  <dd><%= @sourcecode.sampleinput %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sampleoutput) %>:</strong></dt>
  <dd><%= @sourcecode.sampleoutput %></dd>
  <dt><strong><%= model_class.human_attribute_name(:input) %>:</strong></dt>
  <dd><%= @sourcecode.input %></dd>
  <dt><strong><%= model_class.human_attribute_name(:output) %>:</strong></dt>
  <dd><%= @sourcecode.output %></dd>
  <dt><strong><%= model_class.human_attribute_name(:inputa) %>:</strong></dt>
  <dd><%= @sourcecode.inputa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:outputa) %>:</strong></dt>
  <dd><%= @sourcecode.outputa %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sourcecodes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sourcecode_path(@sourcecode), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sourcecode_path(@sourcecode),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
